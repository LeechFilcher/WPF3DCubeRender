<UserControl x:Class="Math.CubeRenderer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Math"
             mc:Ignorable="d" 
             Loaded="CubeRenderer_OnLoaded"
             SizeChanged="CubeRenderer_OnSizeChanged"
             MinWidth="400" MinHeight="400" BorderBrush="#4C2F4F4F" BorderThickness="2" Background="#4CFFFFFF" >
    <Grid>
        <StackPanel>
            <TextBlock Text="Render time: " x:Name="RenderTimeTextBlock"/>
            <TextBlock Text="Rendering in real time:"/>
        </StackPanel>
        
        <Grid x:Name="Grid">

        </Grid>
    </Grid>

</UserControl>
